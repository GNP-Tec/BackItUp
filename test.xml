<config version="1.0"><!-- add quiet="" to stop logging on stdout-->
    <backup>
        <destination>./bkp</destination>
        <!-- currently just a full backup is supported.. Later there will also be recursive -->
        <mode>full</mode>
        <type>compressed</type>
        <log>bkp.log</log>
    </backup>
    <directories>
        <directory>/opt/</directory>
    </directories>
</config>
